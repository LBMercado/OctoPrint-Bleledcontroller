{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "plugin-build",
            "type": "shell",
            "command": "source ${cwd}/../OctoPrint/dev/bin/activate && octoprint dev plugin:install",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "dev-env-activate"
            ]
        },
        {
            "label": "server-run",
            "type": "shell",
            "command": "source ${cwd}/../OctoPrint/dev/bin/activate && octoprint serve",
            "isBackground": true,

            "problemMatcher": [
                {
                    "pattern": [
                      {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                      }
                    ],
                    "background": {
                      "activeOnStart": true,
                      "beginsPattern": ".",
                      "endsPattern": ".",
                    }
                }
            ],
            "dependsOn": [
                "dev-env-activate"
            ]
        },
        {
            "label": "kill-tasks",
            "type": "shell",
            "command": "echo ${input:terminate}",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "terminateAll"
        }
    ]
}