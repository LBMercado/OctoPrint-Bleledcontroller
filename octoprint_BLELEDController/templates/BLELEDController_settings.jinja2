<h2>{{ _('BLE LED Strip Controller Settings') }}</h2>
<div id="connSettings">
    <div class="settings-label-input">
        <label>{{ _('LED Strip MAC Address:')}} </label>
        <input type="text"  id="mac_addr" class="bleled-input-address" data-bind="value: settingsViewModel.settings.plugins.BLELEDController.mac_addr">
        <label>{{ _('LED Strip Service UUID:') }}</label>
        <input type="text" id="service_uuid" class="bleled-input-address" data-bind="value: settingsViewModel.settings.plugins.BLELEDController.service_uuid">
    </div>
    <span class="row-fluid">
        <input type="image" class="btn btn-icon bleled-settings-btn" src="/plugin/BLELEDController/static/img/352060_bluetooth_searching_icon.png" 
               title="{{ _('Lookup BLE Device (WIP)')|edq }}" disabled />
        <button class="btn bleled-settings-btn" data-bind="click: testConn">{{ _('Test Connection') }}</button>
        <div class="bleled-status" data-bind="visible: show_conn_status"> 
          <div class="bleled-status-check bleled-status-draw"> </div> 
          <div class="bleled-status-fail bleled-status-draw"> </div> 
        </div>
    </span>
</div>